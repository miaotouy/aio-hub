{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "AIO Hub",
  "version": "0.5.0-alpha.3",
  "identifier": "com.mty.aiohub",
  "build": {
    "beforeDevCommand": "bun run vite",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["**", "$APPLOCALDATA/**", "$APPDATA/**"],
          "deny": []
        }
      }
    }
  },
  "plugins": {
    "window": {
      "all": true
    },
    "shell": {
      "all": false,
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis", "appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": ["English", "SimpChinese"],
        "displayLanguageSelector": true
      }
    }
  }
}
