{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "all-in-one-tools",
  "version": "0.1.0",
  "identifier": "com.mzk.all-in-one-tools",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "all-in-one-tools",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/*", "$HOME/*", "$DESKTOP/*"],
      "allow": ["read-file", "write-file", "create", "exists"]
    },
    "dialog": {
      "allow": ["open", "save"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
